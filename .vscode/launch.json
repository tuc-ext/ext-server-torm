{
  "version": "0.2.0",
  "configurations": [
    {
        "type": "node",
        "request": "launch",
        "name": "node server.js",
        "cwd": "${workspaceFolder}",
        "program": "${workspaceFolder}/server.js",
//          "args": [], // param for script
//          "runtimeArgs": "" // param for node itself
    },
    {
      "type": "node",
      "request": "launch",
      "name": "nodemon server.js",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/server.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}