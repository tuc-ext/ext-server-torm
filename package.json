{
  "name": "ext.server.torm",
  "version": "0.1.0",
  "private": true,
  "author": "",
  "engines": {
    "node": "10.16.0",
    "npm": "6.9.0"
  },
  "scripts": {
    "autostart": "npm run serve.pm2",
    "boot": "npm i run-script-os && run-script-os",
    "boot:nix": "rm -fr node_modules && rm -fr package-lock.json && npm i -f",
    "boot:windows": "npx rimraf node_modules package-lock.json & npm i -f",
    "archive": "tar czf _archive/archive-`date +%Y%m%d-%H%M%S`.tgz Config*.js _filestore _datastore _logstore",
    "check": "npx cross-env NODE_ENV=development node --inspect-brk server.js",
    "check.sup": "npx cross-env NODE_ENV=development npx supervisor -i node_modules,_logstore,_datastore --inspect-brk -- server.js",
    "demo": "npx cross-env NODE_ENV=production nodemon server.js",
    "demo.sup": "npx cross-env NODE_ENV=development npx supervisor -i node_modules,_logstore,_datastore -- server.js",
    "demo.pm2": "npx cross-env NODE_ENV=development npx pm2 start server.js --name ext.server.torm",
    "deploy": "/faronear/fon/expect-deploy.sh ext-server.bittic.org adot /faronear/tuc-ext/ext.server.torm",
    "serve": "npx cross-env NODE_ENV=production nodemon server.js",
    "serve.sup": "npx cross-env NODE_ENV=production npx supervisor -i node_modules,_logstore,_datastore -- server.js",
    "serve.pm2": "npx cross-env NODE_ENV=production npx pm2 start server.js --name ext.server.torm",
    "pull.datastore": "scp adot@ext-server.bittic.org:/faronear/tuc-ext/ext.server.torm/_datastore/db.sqlite ./_datastore/db-$(date +%Y%m%d-%H%M%S).sqlite",
    "push.datastore": "rsync --rsync-path='sudo rsync' ./_datastore/db.sqlite adot@ext-server.bittic.org:/faronear/tuc-ext/ext.server.torm/_datastore/db-$(date +%Y%m%d-%H%M%S).sqlite",
    "ssl": "certbot certonly -d ext-server.bittic.org --standalone"
  },
  "dependencies": {
    "base.enviconfig": "git+https://git.faronear.org/npm/base.enviconfig",
    "base.FileTransfer.server": "git+https://git.faronear.org/npm/base.FileTransfer.server",
    "base.messenger": "git+https://git.faronear.org/npm/base.messenger",
    "base.tool": "git+https://git.faronear.org/npm/base.tool",
    "base.websocket.server": "git+https://git.faronear.org/npm/base.websocket.server",
    "base.webtoken": "git+https://git.faronear.org/npm/base.webtoken",
    "body-parser": "^1.16.1",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "core.i18n": "git+https://git.faronear.org/npm/core.i18n",
    "core.tool": "git+https://git.faronear.org/npm/core.tool",
    "cors": "^2.8.1",
    "errorhandler": "^1.5.0",
    "etherscan-api": "^10.0.5",
    "express": "^4.14.1",
    "ipfs-core": "^0.5.4",
    "method-override": "^2.3.7",
    "morgan": "^1.8.1",
    "node-schedule": "^1.3.0",
    "nodemon": "^2.0.2",
    "serve-favicon": "^2.5.0",
    "sqlite3": "^5.0.0",
    "tic.crypto": "git+https://git.faronear.org/npm/tic.crypto",
    "typeorm": "^0.2.37",
    "ws": "^7.3.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "pm2": "^5.1.2",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.6",
    "standardx": "^6.0.0",
    "supervisor": "^0.12.0"
  }
}
